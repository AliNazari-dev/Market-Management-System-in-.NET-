@model Category;

@section title {
    @if (Model != null)
    {

        <h3>Add Category</h3>
    }

}

<form method="post" asp-controller="categories" asp-action="Add">
    <div class="col-2">
        <label asp-for="Name" class="col-form-label"></label>
    </div>
    <div class="col-6">
        <input type="text" asp-for="Name" class="form-control"></input>
    </div>
    <div class="col">
        <div class="text-danger" asp-validation-for="Name"></div>
    </div>
    <div class="col-2">
        <label asp-for="Description" class="col-form-label"></label>
    </div>
    <div class="col-6">
        <input type="text" asp-for="Description" class="form-control"></input>
    </div>
    <div class="col-6">
        <input type="submit" class="btn btn-primary" value="update" />
    </div>
</form>