
@model Category

 @section title {
    @if (Model !=null)
    {

        <h3>Category: @Model.Name</h3>
    }

}

<form method="post" asp-controller="categories" asp-action="edit">
    <div class="row mb-3 flex flex-column">
        <div class="col-2"> 
            <label asp-for="Name" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="Name" class="form-control"></input>
        </div>
        <div class="col-2">
            <label asp-for="CategoryId" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="number" asp-for="CategoryId" class="form-control"></input>
        </div>
        <div class="col-2">
            <label asp-for="Description" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="Description" class="form-control"></input>
        </div>
    </div>
    <div class="col-6">
        <button type="submit" class="btn btn-primary">ADD</input>
    </div>
</form>